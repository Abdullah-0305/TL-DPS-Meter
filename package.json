{
  "name": "tl-dps-meter",
  "version": "1.0.0",
  "description": "DPS Meter for Throne and Liberty",
  "main": "electron/main.js",
  "author": "azaura",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on tcp:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "build": "vite build",
    "dist": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.tl.dpsmeter",
    "productName": "TL DPS Meter",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": ["portable"],
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    }
  },
  "dependencies": {
    "chokidar": "^4.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "vite": "^6.0.3",
    "wait-on": "^8.0.1"
  }
}